<!-- Begin main Above the fold Header -->
<div class="full-row grey wrapper">

<!-- "full-row" class allows background to stretch to 100% width -->
	<div class="row header">
		<div class="large-8 columns features-intro">
			
			<!-- Main Heading -->
			<div class="small-8 small-centered columns">
				<div class="logo_wrapper"></div>
			</div>
			
			<div class="baseline">Smart electric longboard</div>
			<div class="wrapper_txt">Sign up now and be inform when we launch.</div>

		<!-- Email Subscribe Form -->
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
				<div class="small-8 large-8 columns">
					<%= f.input :email,  :label => false, :autofocus => true, :placeholder => "Email" %>
				</div>

				<div class="small-4 large-4 columns">
					<%= f.button :submit, "Envoyer", :class => 'medium button success radius' %>
				</div>
				
			<% end %>
		<!-- End Email Row -->

		</div>

		<div class="large-4 columns">
			<%= image_tag "header-phone.png", :title => "pless app", :class => "iphone"%>
		</div>

	</div>
</div>
