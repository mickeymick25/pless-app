<section id="wrapper" class="wrapper-section">
	<!-- Begin main Above the fold Header -->
	<div class="full-row grey wrapper"> 
	<!-- "full-row" class allows background to stretch to 100% width -->
		<div class="row header">
			<div class="large-10 large-centered medium-12 medium-centered small-12 small-centered columns features-intro">
				
				<!-- Main Heading -->
				<div class="row">
					<div class="logo_wrapper"></div>

					<div class="wrapper_header text-center">Longboard électrique intelligent, made in Paris !</div>
						<!-- <div class="wrapper_txt">Sign up now and be inform when we launch.</div> -->
					<div class="wrapper_txt text-center">Inscrivez vous pour être tenu au courant du lancement ! Pas de spam, c'est promis !</div>
				</div>

				<div class="row">
				<!-- Email Subscribe Form -->
					<div class="small-10 small-centered large-8 large-centered columns register_form">
						<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
							<div class="small-8 large-8 columns text-center">
								<%= f.input :email,  :label => false, :autofocus => true, :placeholder => "Email" %>
							</div>

							<div class="small-4 large-4 columns text-center">
								<%= f.button :submit, "Envoyer", :class => 'medium button success radius' %>
							</div>
						<% end %>
					</div>
				<!-- End Email Row -->
				</div>
			</div>
		</div>
	</div>
</section>
<!-- end of wrapper -->

<!-- presentation starts-->
<section id="features" class="features-section">
	<div class="full-row white features">
		<div class="tour">
			<h1>Voici <span class="brand">pless</span>, le premier longboard éléctrique intelligent connecté ! </h1>
		</div>

		<div class="row">
			
				<div class="large-4 small-4 columns">
