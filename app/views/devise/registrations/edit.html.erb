<div class="row">
  <div class="small-4 small-centered columns">
	<h2>Edit <%= resource_name.to_s.humanize %></h2>
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
	  <%= f.error_notification %>
	  <%= display_base_errors resource %>
	  <%= f.input :name, :label => false, :placeholder => "Your name", :autofocus => true %>
	  <%= f.input :email, :label => false, :placeholder => "Email", :required => true %>
	  <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :label => false,:placeholder => "Password", :required => false %>
	  <%= f.input :password_confirmation, :label => false, :placeholder => "Password confirmation", :required => false %>
	  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :label => false, :placeholder => "Current password", :required => true %>
	  <%= f.button :submit, 'Update', :class => 'medium button success radius' %>
	<% end %>
	<h3>Cancel my account</h3>
	<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete , :class => "medium button success alert"%></p>
  </div>
</div>

<div>
	<%= render 'layouts/google_analytics' %>
</div>